@using CryptoCurrencyViewer.Models.Crypto;
@model CryptoModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Cryptocurrency</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/search-styles.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>



    <div class="container my-5">
        <!-- Search Form -->
        <div class="row mb-4 justify-content-center">
            <div class="col-lg-8">
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control bg-secondary text-white" name="cryptoId" id="cryptoId" placeholder="Enter cryptocurrency ID or symbol" required>
                    <button class="btn btn-secondary ms-2" type="button" id="searchButton">
                        <i class="fas fa-search"></i> Search
                    </button>
                   
                </div>
            </div>
        </div>

        <!-- Crypto Information Holder -->
        <div class="card mb-5 shadow bg-secondary">
            <div class="card-header text-center">
                <h3 class="mb-0">Crypto Information</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Crypto icon -->
                    <div class="col-md-4 d-flex align-items-center justify-content-center mb-3">
                        <img src="@Model.DefaultCryptoModel.ImageUrl" alt="Crypto Icon" class="img-fluid rounded-circle" id="cryptoIcon">
                    </div>

                    <!-- Crypto info -->
                    <div class="col-md-8 text-center">
                        <h1 id="cryptoName">@Model.Name (@Model.DefaultCryptoModel.Symbol)</h1>
                        <p id="cryptoCurrentPrice">Current Price: @Model.DefaultCryptoModel.CurrentPrice USD</p>

                        <div class="row">
                            <!-- Market Info Column -->
                            <div class="col-md-6">
                                <div id="title"><strong>Market Info:</strong></div>
                                <ul class="list-unstyled">
                                    <li id="cryptoSymbol" class="crypto-symbol">Symbol: @Model.DefaultCryptoModel.Symbol</li>
                                    <li id="cryptoMarketCap">Market Cap: @Model.DefaultCryptoModel.MarketCap USD</li>
                                    <li id="cryptoVolume24h">Volume (24h): @Model.ExtendedCryptoModel.Volume24h USD</li>
                                    <li id="cryptoPriceChange24h">Price Change (24h): @Model.ExtendedCryptoModel.PriceChangePercentage24h%</li>
                                    <li id="cryptoHigh24h">High (24h):  @Model.ExtendedCryptoModel.High24h</li>
                                    <li id="cryptoLow24h">Low (24h):  @Model.ExtendedCryptoModel.Low24h</li>
                                    <li id="cryptoPriceChange7d">Price Change (7d):  @Model.ExtendedCryptoModel.PriceChangePercentage7d%</li>

                                </ul>
                            </div>

                            <!-- Supply Info Column -->
                            <div class="col-md-6">
                                <div id="title"><strong>Supply Info:</strong></div>
                                <ul class="list-unstyled">
                                    <li id="cryptoTotalSupply">Total Supply: @Model.ExtendedCryptoModel.TotalSupply</li>
                                    <li id="cryptoMaxSupply">Max Supply: @Model.ExtendedCryptoModel.MaxSupply</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Buttons aligned to the right -->
                        <div class="row mt-3">
                            <div class="col text-end">
                                <button class="btn btn-secondary  fw-bold" type="button" id="markFavouriteButton" onclick="markFavorite('@Model.')">
                                    <i class="fas"></i> Mark As Favourite
                                </button>
                                <button class="btn btn-light  fw-bold" type="button" id="tradePairsBtn" onclick="openExchangePage('@Model.Name')">
                                    <i class="fas"></i> See Trade Pairs
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>



        <!-- Crypto History Holder -->
        <div class="card border-primary bg-secondary">
            <div class="card-header text-center">
                <h3 class="mb-0">Search History</h3>
            </div>
            <ul class="list-group list-group-flush" id="search-history">
                <!-- ... Ваша история поиска ... -->
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/js/searchpagejs.js" asp-append-version="true"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
</body>
</html>