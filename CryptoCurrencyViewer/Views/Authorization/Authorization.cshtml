@using CryptoCurrencyViewer.Views.Authorization;
@model PageState;

<html>
<head>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/authorizationPage.css" asp-append-version="true">

</head>
<body>
    @if (Model == PageState.Registration)
    {

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <h5 class="card-header">Регистрация</h5>
                        <div class="card-body">
                            <form id="registerForm" method="post">
                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName">Name</label>
                                        <input type="text" class="form-control" id="firstName" placeholder="Name" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName">Surname</label>
                                        <input type="text" class="form-control" id="lastName" placeholder="Surname" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-12 mb-3">
                                        <label for="registrationEmail">Email address</label>
                                        <input type="email" class="form-control" id="registrationEmail" placeholder="name@example.com" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="confirmPassword">Confirm password</label>
                                        <input type="password" class="form-control" id="confirmPassword" required>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button id="registerSubmitBtn" type="button" class="btn btn-primary">SignIn</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            Already have an account? <a href="/Authorization/Login" class="link-primary">Login</a>
        </div>
    }
    @if (Model == PageState.Login)
    {

        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <h5 class="card-header">Вход в систему</h5>
                        <div class="card-body">
                            <form id="loginForm" method="post">
                                <!-- Email -->
                                <div class="mb-3">
                                    <label for="loginEmail" class="form-label">Email addres</label>
                                    <input type="email" class="form-control" id="loginEmail" placeholder="name@example.com" required>
                                </div>
                                <!-- Пароль -->
                                <div class="mb-3">
                                    <label for="loginPassword" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="loginPassword" required>
                                </div>
                                <!-- Запомнить меня -->
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                                <!-- Кнопка для отправки формы -->
                                <div class="d-flex justify-content-center">
                                    <button id="loginSubmitBtn"  type="button" class="btn btn-primary">Login</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            Don't have an account? <a href="/Authorization/Register" class="link-primary">SignIn</a>
    </div>

    }


    <!-- Bootstrap JS, Popper.js, and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/authorization.js" asp-append-version="true"></script>

</body>

</html>
